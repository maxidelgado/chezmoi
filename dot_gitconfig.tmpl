[user]
    name = {{ .full_name }} 
    email = {{ .personal_email }}

[core]
    editor = "nvim"

[includeIf "{{ .work_gitconfig_dir }}"]
    path = ~/.gitconfig_work 

[push]
    autoSetupRemote = true

[url "git@github.com:"]
  insteadOf = https://github.com/

[gpg]
  format = ssh
[gpg "ssh"]
  program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
