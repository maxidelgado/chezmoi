#!/bin/bash
# This script runs only once on a new machine

set -e # Exit immediately if a command fails

echo "â€º Checking for Homebrew and installing if not found..."
if ! command -v brew &> /dev/null; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

echo "â€º Homebrew is installed. Tapping and installing from Brewfile..."
brew bundle --global
echo "âœ… Brew bundle complete."

echo "â€º Installing asdf plugins..."
asdf plugin add nodejs https://github.com/asdf-vm/asdf-nodejs.git
asdf plugin add golang https://github.com/asdf-community/asdf-golang.git
asdf plugin add rust https://github.com/code-lever/asdf-rust.git
asdf plugin add python https://github.com/danhper/asdf-python.git
asdf install
echo "âœ… asdf plugins installed."

echo "ðŸš€ Setting up Mouse Mover..."
~/.mover/install.sh
echo "âœ… Mouse Mover setup complete."

exit 0
